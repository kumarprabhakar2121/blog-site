<%- include("partials/header"); -%>
<div class="container composeForm">
<h1>Compose</h1>
    <br>
    <form action="/compose" method="post">
        <label><h3>Title</h3></label>
        <p class="postFields">
        <input type="text" name="postTitle" style="width: 100%; height: 40px" id="" autofocus></p>
        <br>
        <label for="post"><h3>Post</h3></label><br><p class="postFields">
        <textarea id="post" name="postBody" rows="6" style="width:100%"></textarea></p>

        <br><button class="btn btn-lg btn-default btn-success" type="submit">Publish</button>
    </form>
</div>


